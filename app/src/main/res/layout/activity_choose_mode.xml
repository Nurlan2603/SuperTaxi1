<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseModeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/taxi"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Taxi"/>

        <Button
            android:id="@+id/passengerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToPassengerSignIn"
            android:background="@color/colorPrimaryDark"
            android:text="Я пассажир"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginTop="150dp" />

        <Button
            android:id="@+id/driverButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToDriverSignIn"
            android:background="@color/colorAccent"
            android:text="Я водитель"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />


    </LinearLayout>

</FrameLayout>